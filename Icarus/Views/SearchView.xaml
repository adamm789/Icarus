<UserControl x:Class="Icarus.Views.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xtk1="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:items="clr-namespace:Icarus.ViewModels.Items"
             d:DataContext="{d:DesignInstance Type=items:ItemListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <xtk1:WatermarkTextBox Watermark="Search" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" ></xtk1:WatermarkTextBox>
    </Grid>
</UserControl>
