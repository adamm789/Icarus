<UserControl x:Class="Icarus.Views.Import.ImportVanillaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Icarus.Views.Import"
             xmlns:import="clr-namespace:Icarus.ViewModels.Import"
             xmlns:ui="clr-namespace:Icarus.UI"
             d:DataContext="{d:DesignInstance Type=import:ImportVanillaViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel.Resources>
            <ui:BooleanToVisibilityConverter
                x:Key="BooleanToVisibilityConverter"
                True="Visible" False="Hidden"/>
        </StackPanel.Resources>

        <TextBox Text="{Binding SelectedItemName}" IsReadOnly="True"
                 Margin="0 0 0 5"/>
        
        <TextBox Text="{Binding SelectedItemMdl}" IsReadOnly="True"/>
        <Grid Margin="0 0 0 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <ComboBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding AllRacesMdls}"
                  SelectedValue="{Binding SelectedRace}"
                  Text="Add Vanilla Model"
                  Visibility="{Binding HasSkin, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <Button Grid.Row="0" Grid.Column="1" Command="{Binding GetVanillaModel}" Content="Add Vanilla Mdl"
                    Visibility="{Binding CanImportMdl, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>

        <TextBox Text="{Binding SelectedItemMtrl}" IsReadOnly="True"/>
        <Button Command="{Binding GetVanillaMaterial}" Content="Add Vanilla Mtrl"
                Visibility="{Binding CanImportMtrl, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!--
        <TextBox Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Text}" TextWrapping="NoWrap" Width="300"/>
        <Button Grid.Row="1" Grid.Column="2" Command="{Binding TryGetPathCommand}" Content="Try Get File"/>
        -->

    </StackPanel>
</UserControl>
