<UserControl x:Class="Icarus.Views.Import.ImportVanillaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:import="clr-namespace:Icarus.ViewModels.Import"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:ui="clr-namespace:Icarus.UI"
             d:DataContext="{d:DesignInstance Type=import:ImportVanillaViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel.Resources>
            <ui:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"
                True="Visible" False="Hidden"/>
        </StackPanel.Resources>

        <TextBox Text="{Binding SelectedItemName}" IsReadOnly="True" Margin="0 10 0 5"/>

        <!-- Vanilla Model -->
        <TextBox Text="{Binding SelectedItemMdl}" IsReadOnly="True"/>
        <UniformGrid Columns="2" Margin="0 0 0 5">
            <ComboBox ItemsSource="{Binding AllRacesMdls}"
                  Text="Add Vanilla Model" SelectedValue="{Binding SelectedRace}" 
                  Visibility="{Binding HasSkin, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <Button Grid.Row="0" Grid.Column="1" Command="{Binding GetVanillaModel}" Content="Add Vanilla Mdl"
                    IsEnabled="{Binding CanImportMdl}" dd:DragDrop.DragSourceIgnore="True"/>
        </UniformGrid>


        <!-- Vanilla Material -->
        <TextBox Text="{Binding SelectedItemMtrl}" IsReadOnly="True"/>
        <Button Command="{Binding GetVanillaMaterial}" Content="Add Vanilla Mtrl"
                IsEnabled="{Binding CanImportMtrl}" dd:DragDrop.DragSourceIgnore="True"/>

        <!-- Vanilla Texture -->
        <UniformGrid Columns="2">
            <ComboBox ItemsSource="{Binding AvailableTexTypes}" SelectedValue="{Binding SelectedTexType}"/>
            <Button Command="{Binding GetVanillaTexture}" Content="Add Vanilla Tex"
                IsEnabled="{Binding CanImportTex}" dd:DragDrop.DragSourceIgnore="True"/>
        </UniformGrid>

        <!-- Vanilla Metadata -->
        <Button Command="{Binding GetVanillaMetadata}" 
                IsEnabled="{Binding CanImportMeta}" Content="Add Metadata"/>
    </StackPanel>
</UserControl>
