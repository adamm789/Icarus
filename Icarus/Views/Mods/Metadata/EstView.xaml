<UserControl x:Class="Icarus.Views.Mods.Metadata.EstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Icarus.Views.Mods.Metadata"
             xmlns:metadata="clr-namespace:Icarus.ViewModels.Mods.Metadata"
             d:DataContext="{d:DesignInstance Type=metadata:EstViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type metadata:EstEntryViewModel}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Race}" Margin="5"/>
                    <TextBlock Text="{Binding SetId}" Margin="5"/>
                    <TextBox Text="{Binding SkelId}" Margin="5"/>
                </StackPanel>
            </DataTemplate>
        </Grid.Resources>
        <StackPanel Orientation="Horizontal">
            <ListBox ItemsSource="{Binding MaleEstEntries}" HorizontalContentAlignment="Stretch"/>
            <ListBox ItemsSource="{Binding FemaleEstEntries}" HorizontalContentAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>
