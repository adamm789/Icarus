<UserControl x:Class="Icarus.Views.Mods.Metadata.EqdpEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Icarus.Views.Mods.Metadata"
             xmlns:metadata="clr-namespace:Icarus.ViewModels.Mods.Metadata"
             d:DataContext="{d:DesignInstance Type=metadata:EqdpEntryViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Race}" Grid.Column="0"/>
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <CheckBox Content="bit0" IsChecked="{Binding Bit0}"/>
            <CheckBox Content="bit1" IsChecked="{Binding Bit1}"/>
        </StackPanel>
    </Grid>
</UserControl>
