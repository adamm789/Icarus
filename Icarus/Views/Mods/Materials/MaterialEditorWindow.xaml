<Window x:Class="Icarus.Views.Mods.MaterialEditorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Icarus.Views.Mods"
             xmlns:ui="clr-namespace:Icarus.UI" 
             xmlns:mods="clr-namespace:Icarus.ViewModels.Mods"
             xmlns:mtrl="clr-namespace:xivModdingFramework.Materials.DataContainers;assembly=xivModdingFramework"
        d:DataContext="{d:DesignInstance Type=mods:MaterialModViewModel}"
        mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300"
        MinHeight="350" MinWidth="500"
        MaxHeight="500" MaxWidth="650">
    <StackPanel>
        <StackPanel.Resources>
            <DataTemplate DataType="{x:Type mods:ColorSetRowViewModel}">
                <local:ColorSetRowView/>
            </DataTemplate>
        </StackPanel.Resources>
    <Grid DataContext="{Binding ShaderInfoViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Shader" />
        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding ShaderEnum}" SelectedValue="{Binding MtrlShader, Mode=TwoWay}"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Preset"/>
        <ComboBox Grid.Row="0" Grid.Column="3" ItemsSource="{Binding ShaderPresetEnum}" SelectedValue="{Binding Preset}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Transparency"/>
        <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Transparancy}" SelectedValue="{Binding IsTransparent}"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="Colorset"/>
        <ComboBox Grid.Row="1" Grid.Column="3"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Backfaces"/>
        <ComboBox Grid.Row="2" Grid.Column="1" SelectedValue="{Binding ShowBackfaces}"/>

        <local:MaterialTexPathsView Grid.Row="3" Grid.ColumnSpan="4"/>

    </Grid>
        <ListView Grid.Row="4" Grid.ColumnSpan="4" ItemsSource="{Binding ColorSetViewModels}">
        </ListView>
    </StackPanel>

</Window>
